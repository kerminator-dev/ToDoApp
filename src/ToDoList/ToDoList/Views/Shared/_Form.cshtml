@model ToDoViewModel

<form asp-action="Insert" id="form-action" method="post" class="form-horizontal" role="form">
	<div asp-validation-summary="All" class="text-danger"></div>
	
	<div class="row justify-content-center">
		<div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
			<label asp-for="ToDoItem.Name" class="form-label" ></label>
			<input asp-for="ToDoItem.Id" type="hidden" class="form-control" />
			<input asp-for="ToDoItem.Name" class="form-control"/>
			<span asp-validation-for="ToDoItem.Name" class="text-danger" ></span>
		</div>
	</div>

	<div class="row justify-content-center">
		<div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5" >
	
	<input type="submit" class="btn btn-success" id="form-button" value="Добавить" />
	</div>
	</div>
</form>