@model ToDoViewModel

<div class="row justify-content-center">
	<div class="col-xl-6 col-lg-8 col-sm-10">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var todo in Model.ToDoItems)
				{
					<tr>
						<td class="todos-column">@todo.Id</td>
						<td class="todos-column">@todo.Name</td>
						<td class="buttons-column">
							<input type="submit" class="btn btn-danger" value="Удалить" onclick="deleteToDo(@todo.Id)" />
							<input type="submit" class="btn btn-primary" value="Изменить" onclick="populateForm(@todo.Id)" />
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>